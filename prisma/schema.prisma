generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum RoomType {
  junior
  king
  presidential
}

enum ReservationStatus {
  CONFIRMED
  PENDING
  CANCELLED
}

model Room {
  id          String   @id
  type        RoomType
  capacity    Int
  baseRate    Int
  isActive    Boolean  @default(true)
  availabilityVersion Int @default(0) // for cache invalidation
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  reservations Reservation[]

  @@index([type, capacity, isActive])
  @@map("rooms")
}

model Reservation {
  id               String            @id
  roomId           String
  type             RoomType          // Denormalized for historical integrity
  checkIn          DateTime
  checkOut         DateTime
  guests           Int
  breakfast        Boolean           @default(false)
  totalCents       Int
  status           ReservationStatus @default(CONFIRMED)
  idempotencyKey   String?           @unique
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  customerId       String?           // future expansion

  // Relations
  room             Room              @relation(fields: [roomId], references: [id])

  // Indexes for performance
  @@index([roomId, checkIn, checkOut])
  @@index([checkIn, checkOut])
  @@index([status])
  @@index([idempotencyKey])
  @@map("reservations")
}

model PricingRule {
  id          String   @id @default(cuid())
  name        String
  type        String   // 'weekend_uplift', 'length_discount', 'breakfast_addon'
  config      String   // JSON configuration
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@map("pricing_rules")
}
