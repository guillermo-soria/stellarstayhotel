# Server
PORT=3000
LOG_LEVEL=info
NODE_ENV=development

# Database 
DATABASE_URL="file:./dev.db"   # SQLite for local dev; use Postgres in prod

# Idempotency 
IDEMPOTENCY_TTL_SECONDS=86400

# Cache
CACHE_TTL_SECONDS=90

# Readiness thresholds (MB)
# Warning is non-fatal (HTTP 200); Critical fails readiness (HTTP 503)
READINESS_MEMORY_WARNING_MB=200
READINESS_MEMORY_CRITICAL_MB=500
